{
  "name": "pegasus-graphql",
  "version": "1.0.0",
  "description": "an opinionated graphql server format for combining schema and implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "prepublish": "tsc",
    "test": "nyc mocha --require=ts-node/register test/**/*.ts"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "./src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 90
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.13.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.2",
    "@types/supertest": "^2.0.4",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "express": "^4.16.3",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "prettier": "^1.12.1",
    "supertest": "^3.1.0",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12",
    "graphql": "^0.13.2"
  }
}
