{
  "name": "graphql-schema-bindings",
  "version": "0.11.0",
  "description": "an opinionated graphql server format for combining schema and implementation",
  "repository": {
    "type": "github",
    "url": "https://github.com/IBM/graphql-schema-bindings"
  },
  "author": "Cory Cook",
  "contributors": [
    "Zack Grossbart <zack@grossbart.com>"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "prepare": "tsc",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "@types/supertest": "^2.0.5",
    "apollo-server-express": "^2.4.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.3",
    "express": "^4.16.3",
    "extend": "3.0.2",
    "graphql": "^0.13.2",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "lodash": "^4.17.11",
    "prettier": "^1.14.2",
    "supertest": "^4.0.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12"
  },
  "peerDependencies": {
    "graphql": ">=0.10.0"
  }
}
