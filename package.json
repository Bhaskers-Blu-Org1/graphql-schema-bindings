{
  "name": "graphql-schema-bindings",
  "version": "1.0.0",
  "description": "an opinionated graphql server format for combining schema and implementation",
  "repository": {
    "type": "github",
    "url": "https://github.com/IBM/graphql-schema-bindings"
  },
  "author": "Cory Cook",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "prepublish": "tsc",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "@types/supertest": "^2.0.4",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^23.0.0",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12"
  },
  "peerDependencies": {
    "graphql": "^0.13.2"
  }
}
